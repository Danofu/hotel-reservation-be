{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6",
         "ES2021"
      ],
      "target": "ES2021",
      "module": "commonjs",
      "allowJs": true,
      "checkJs": true,
      "moduleResolution": "node",
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "allowSyntheticDefaultImports": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "esModuleInterop": true,
      "baseUrl": ".",
      "isolatedModules": false,
      "resolveJsonModule": true,
   },
   "include": ["src"]
}