{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6",
         "ES2021"
      ],
      "target": "ES2021",
      "module": "commonjs",
      "allowJs": true,
      "checkJs": true,
      "moduleResolution": "node",
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "allowSyntheticDefaultImports": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "esModuleInterop": true,
      "baseUrl": ".",
      "isolatedModules": false,
      "resolveJsonModule": true,
      "types": ["jest", "node", "reflect-metadata", "chai", "mocha"]
   },
   "typedocOptions": {
      "entryPoints": [
         "src/entity/jedzenie.ts",
         "src/entity/kategorja.ts",
         "src/entity/menu.ts",
         "src/entity/pokoj.ts",
         "src/entity/pracowniki.ts",
         "src/entity/rezerwacja.ts",
         "src/entity/stanowisko.ts",
         "src/entity/user.ts",
         "src/controllers/pokoj.ts",
         "src/controllers/pracownik.ts",
         "src/controllers/kategorja.ts",
         "src/controllers/jedzenie.ts",
         "src/controllers/auth.ts",
         "src/controllers/rezerwacja.ts",
         "src/controllers/users.ts",
         "src/utils/checkToken.ts",
         "src/utils/common.ts",
         "src/utils/routeConfig.ts",
         "src/routes/authRoutes.ts",
         "src/routes/jedzenieRoutes.ts",
         "src/routes/kategorjaRoutes.ts",
         "src/routes/pokojRoutes.ts",
         "src/routes/pracownikRoutes.ts",
         "src/routes/rezerwacjaRoutes.ts",
         "src/routes/usersRoutes.ts",
         "src/data-source.ts"
       ],
       "out": "doc",
   },
   "include": ["src", "tests/*.ts"]
}